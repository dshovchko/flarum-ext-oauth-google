{
    "name": "johnhearfield/flarum-ext-oauth-google",
    "description": "Allow users to log in with Google.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "John Hearfield",
            "email": "dev@findingjohn.xyz"
        }
    ],
    "support": {
        "source": "https://github.com/johnhearfield/flarum-ext-oauth-google"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5",
        "league/oauth2-google": "~1.*"
    },
    "autoload": {
        "psr-4": {
            "JohnHearfield\\Auth\\Google\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Google Login",
            "icon": {
                "name": "google",
                "backgroundColor": "#D13E32",
                "color": "#fff"
            }
        }
    }
}
